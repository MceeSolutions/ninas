<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_gtpay" model="ir.ui.view">
            <field name="name">acquirer.form.gtpay</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'gtpay')]}">
                        <field name="gtpay_seller_account"/>
                        <field name="gtpay_webpay_seller_account"/>
                        <field name="gtpay_hash_key"/>
                        <a colspan="2" href="https://ibank.gtbank.com/GTPay/Upgrade/Pages/Users/Documentation.aspx" target="_blank">How to configure your gtpay account?</a>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_gtpay" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.gtpay</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acquirer_reference']" position="after">
                    <field name="gtpay_txn_type" readonly="1" attrs="{'invisible': [('provider', '!=', 'gtpay')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
