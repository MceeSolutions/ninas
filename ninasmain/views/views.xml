	<record model="ir.ui.view" id="ninas_advance_request_tree_view">
		<field name="name">ninas.advance_request.tree</field>
		<field name="model">ninas.advance_request</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree>
				<field name="employee_name"/>
				<field name="amount"/>
				<field name="request_date"/>
			</tree>
		</field>
	</record>
	
	<record model="ir.ui.view" id="ninas_advance_request_form_view">
		<field name="name">ninas.advance_request.form</field>
		<field name="model">ninas.advance_request</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Advance Request Form">
				<sheet>
					<group col="4" colspan="2">
						<field name="country_id"/>
						<field name="request_date"/>
						<field name="vendor"/>
						<field name="amount"/>
						<field name="invoice_id"/> 
						<field name="invoice_date"/>
						<field name="purpose"/>
						<field name="project_manager"/>
						<field name="sponsored"/>
						<field name="project_manager"/>
						<field name="fund"/>
						<field name="grant"/>
						<field name="cc"/>
						<field name="sponsored"/>
						<field name="notes"/>
					</group>
					
					<group col="4" colspan="2">
						<field name="payment_agent"/>
						<field name="payee"/>
						<field name="expected_date"/>
						<field name="remarks"/>
						<field name="employee_name"/>
						<field name="approved_by"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	
	<record model="ir.ui.view" id="ninas_mission_report_tree_view">
		<field name="name">ninas.mission_report.tree</field>
		<field name="model">ninas.mission_report</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree>
				<field name="employee_name"/>
				<field name="position"/>
				<field name="purpose" string="Purpose"/>
				<field name="mission_date"/>
			</tree>
		</field>
	</record>
	
	<record model="ir.ui.view" id="ninas_mission_report_form_view">
		<field name="name">ninas.mission_report.form</field>
		<field name="model">ninas.mission_report</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Back-to-office Mission Report">
				<sheet>
					<group col="4" colspan="2">
						<field name="employee_name"/>
						<field name="position"/>
						<field name="mission_date"/>
						<field name="places"/>
						<field name="participants"/>
					</group>
					<group colspan="1">
						<field name="purpose"/>
						<field name="background"/>
						<field name="achievement"/>
						<field name="follow_up"/>
						<field name="matters"/>
					</group>
					<group col="4" colspan="2">
						<field name="signature"/>
						<field name="date"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>
    
