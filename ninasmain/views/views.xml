    <!-- loan request -->
    <record id="loan_request_tree_view" model="ir.ui.view">
		<field name="name">loan.request.tree</field>
		<field name="model">loan.request</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<field name="name"/>
			<field name="purpose"/>
		</field>
	</record>
	

    <record id="loan_request_form" model="ir.ui.view">
    <field name="name">loan.request.form</field>
    <field name="model">loan.request</field>
    <field name="priority" eval="2"/>
    <field name="arch" type="xml">
        <form string="Loan">
        	<header>
        		<button name="button_submit" string="Submit" type="object" class="btn btn-primary" states="new"/>
        		<button name="button_approve" string="Approve" type="object" class="btn btn-primary" states="submit"/>
        		<button name="button_reject" string="Rejected" type="object" class="btn btn-danger" states="submit"/>
        		<button name="button_reset" string="Reset" type="object" class="btn btn-primary" states="reject"/>
        		<button name="button_validate" string="Validate" type="object" class="btn btn-primary" states="approve"/>
        		<field name="state" widget="statusbar" statusbar_visible="new,submit,approve" readonly="1"/>
        	</header>
			 <sheet>
				 <group string="Request" col="4" colspan="4">
				 <field name="name"/>
				 <field name="purpose"/>
				 </group>
				 <group string="Terms Of Loan" col="4" colspan="4">
				 <field name="loan_amount"/>
				 <field name="currency"/>
				 <field name="repayment"/>
				 <field name="repayment_period"/>
				 <field name="total"/>
				 </group>
				 <group string="Loan Recieved From:" col="4" colspan="4">
				 <field name="recieved_from"/>
				 <field name="date"/>
				 </group>
				 <group string="Loan Recieved into the Bank:confirmed by:" col="4" colspan="4">
				 <field name="recieved_from_name"/>
				 <field name="date"/>
				 </group>
			 </sheet>
			 <div class="oe_chatter">
			             <field name="message_follower_ids" widget="mail_followers"/>
			             <field name="activity_ids" widget="mail_activity"/>
			             <field name="message_ids" widget="mail_thread"/>
			        </div>
        </form>
    </field>
    </record>
    
    <!-- Travel Request -->
    <record id="travel_request_tree_view" model="ir.ui.view">
		<field name="name">travel.request.tree</field>
		<field name="model">travel.request</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<field name="name"/>
			<field name="purpose"/>
			<field name="departure_date"/>
			<field name="return_date"/>
		</field>
	</record>
    
    <record id="travel_request_form" model="ir.ui.view">
    <field name="name">travel.request.form</field>
    <field name="model">travel.request</field>
    <field name="priority" eval="2"/>
    <field name="arch" type="xml">
        <form string="Travel">
        	<header>
        		<button name="button_submit" string="Submit" type="object" class="btn btn-primary" states="new"/>
        		<button name="button_approve" string="Approve" type="object" class="btn btn-primary" states="submit"/>
        		<button name="button_reject" string="Reject" type="object" class="btn btn-danger" states="submit"/>
        		<button name="button_reset" string="Reset" type="object" class="btn btn-primary" states="reject"/>
        		<button name="button_validate" string="Validate" type="object" class="btn btn-primary" states="approve"/>
        		<button name="button_ceo" string="CEO Validation" type="object" class="btn btn-primary" states="validate"/>
        		<field name="state" widget="statusbar" statusbar_visible="new,submit,approve" readonly="1"/>
        	</header>
			 <sheet>
				 <group string="General and Traveler Information" col="4" colspan="4">
					 <field name="today_date"/>
					 <field name="travelrequest_no"/>
					 <field name="traveller_email"/>
					 <field name="name"/>
					 <field name="traveller_job"/>
					 <field name="traveller_phone"/>
					 <field name="traveller_department"/>
					 <field name="contact_phone"/>
					 <field name="contact_name"/>
					 <field name="traveller_employee_id"/>
				 </group>
				 <group col="2" colspan="2">
				 	<field name="purpose"/>
				 </group>
				 <group string="Classification of Traveler (check one)" col="4" colspan="4">
					 <field name="ninas_employee"/>
					 <field name="ninas_expert"/>
					 <field name="ninas_assesor"/>
					 <field name="ninas_guest"/>
					 <field name="ninas_other"/>
					 </group>
				 <group string="Itinerary" col="4" colspan="4">
					 <field name="departure_place"/>
					 <field name="destination_place"/>
					 <field name="departure_date"/>
					 <field name="return_date"/>
					 <field name="rental"/>
					 <field name="residence"/>
				 </group>
				 <group string="Additional Employee Travel Information (This section only applies to employee travelers)" col="4" colspan="2">
					 <field name="non_business_activity"/>
					 <field name="non_business_yes"/>
				 </group>
				 <group string="Estimated Travel Expenditures" col="4" colspan="2">
				 	<field name="billed_to"/>
					<field name="reimbursed_by"/>
					<field name="total_paid"/>
				 </group>
				 <notebook>
						<page name="expense" string="Expense"> 
							<field name="account_ids">
							</field>
						</page>
					</notebook>
				<group>
					<field name="thrid_party"/>
				</group>
				<group col="4" colspan="4">
					<field name="traveler_sign"/>
					<field name="traveler_date"/>
					<field name="linemanager_sign"/>
					<field name="linemanager_date"/>
					<field name="admin_sign"/>
					<field name="admin_date"/>
					<field name="ceo_sign"/>
					<field name="ceo_date"/>
				</group>
			 </sheet>
			 <div class="oe_chatter">
			             <field name="message_follower_ids" widget="mail_followers"/>
			             <field name="activity_ids" widget="mail_activity"/>
			             <field name="message_ids" widget="mail_thread"/>
			        </div>
        </form>
    </field>
    </record>
	
	
	<!-- Monthly Consumable Receipt -->
	<record id="month_consumable_form_view" model="ir.ui.view">
            <field name="name">month.consumable.form</field>
            <field name="model">month.consumables</field>
            <field eval="14" name="priority"/>
            <field name="arch" type="xml">
                <form string="Items receipted">
	                <sheet>
	                <group col="4" colspan="4">
	                	<field name="name"/>
	                	<field name="date"/>
	                </group>
	                	<notebook>
	                		<page name="item" string="Items receipted">
	                			<field name="month_ids">
	                				<tree>
	                					<field name="name_id"/>
	                					<field name="product_id"/>
	                					<field name="quantity"/>
	                				</tree>
	                			</field>
	                		</page>
	                	</notebook>
	                </sheet>
                </form>
        </field>
    </record>
    
