    <record id="loan_request_form" model="ir.ui.view">
    <field name="name">loan.request.form</field>
    <field name="model">loan.request</field>
    <field name="priority" eval="2"/>
    <field name="arch" type="xml">
        <form string="Loan">
        	<header>
        		<button name="button_submit" string="Submit" type="object" class="btn btn-primary" states="new" groups="base.group_user"/>
        		<button name="button_approve" string="Approve" type="object" class="btn btn-primary" states="submit" groups="ninasmain.group_hr_line_manager"/>
        		<button name="button_reject" string="Rejected" type="object" class="btn btn-danger" states="submit" groups="ninasmain.group_hr_line_manager"/>
        		<button name="button_reset" string="Reset" type="object" class="btn btn-primary" states="reject"/>
        		<button name="button_paid" string="Paid" type="object" class="btn btn-primary" states="approve" groups="ninasmain.group_admin_finance_officer"/>
        		<button name="button_confirm" string="Confirm Payment" type="object" class="btn btn-primary" states="paid" groups="base.group_user"/>
        		<field name="state" widget="statusbar" statusbar_visible="new,submit,approve" readonly="1"/>
        	</header>
			 <sheet>
				 <group string="Request" col="4" colspan="4">
				 <field name="name"/>
				 <field name="purpose"/>
				 <field name="balance" readonly="1"/>
				 <field name="currency_id" readonly="1" invisible="1"/>
				 </group>
				 <notebook>
					 <page string="Terms Of Loan">
					 	<field name="loan_line_ids">
							<tree editable="True">
								<field name="loan_amount"/>
								<field name="loan_paid" attrs="{'readonly':[('state','!=','paid')]}"/><!-- groups="ninasmain.group_admin_finance_officer"-->
								<field name="currency_id" readonly="1" invisible="1"/>
								<field name="state" invisible="1"/>
							</tree>
						</field>
						<group class="oe_subtotal_footer oe_right">
                           <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
					 </page>
				 </notebook>
				 <group col="4" colspan="4">
						 <field name="repayment"/>
						 <field name="repayment_period"/>
				</group>
				 <group string="Loan Recieved From:" col="4" colspan="4">
				 <field name="recieved_from"/>
				 <field name="date_recevfrom"/>
				 </group>
				 <group string="Loan Recieved into the Bank:confirmed by:" col="4" colspan="4">
				 <field name="recieved_from_name"/>
				 <field name="date_recevfromname"/>
				 </group>
			 </sheet>
			 <div class="oe_chatter">
			             <field name="message_follower_ids" widget="mail_followers"/>
			             <field name="activity_ids" widget="mail_activity"/>
			             <field name="message_ids" widget="mail_thread"/>
			        </div>
        </form>
    </field>
    </record>
    
