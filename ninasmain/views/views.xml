<odoo>
  <data>

  	<record id="ninas_employee_form_view" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="priority" eval="7" />
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
           <xpath expr="//page[@name='personal_information']" position="after">
           
					<page name="next_ofkin" string="Next of Kin">
						<group string="Full Name" col="4" colspan="4">
							<field name="fname"/>
							<field name="lname"/>
						</group>
						<group string="Address" col="4" colspan="4">
							<field name="address"/>
							<field name="unit"/>
							<field name="city"/>
							<field name="state_id"/>
							<field name="zip_code"/>
						</group>
						<group>
							<field name="telphone"/>
							<field name="phone_id"/>
						</group>
						<group>
							<field name="relationship"/>
						</group>
					</page>
					
					<page name="emergencyinfo" string="Emergency Contact Information">
						<group string="Full Name" col="4" colspan="4">
							<field name="fname"/>
							<field name="lname"/>
						</group>
						<group string="Address" col="4" colspan="4">
							<field name="address"/>
							<field name="unit"/>
							<field name="city"/>
							<field name="state_id"/>
							<field name="zip_code"/>
						</group>
						<group>
							<field name="telphone"/>
							<field name="phone_id"/>
						</group>
						<group>
							<field name="relationship"/>
						</group>
					</page>
				</xpath>
 				
			 <xpath expr="//page[@name='personal_information']" position="inside">
	             <group string="Fullname" col="4" colspan="4">
					<field name="name"/>
					<field name="lname"/>
				</group>
				<group col="4" colspan="4">
					<field name="city"/>
					<field name="state_id"/>
					<field name="zip_code"/>
				</group>
				<group col="4" colspan="4">
					<field name="email"/>
					<field name="officail_id"/>
				</group>
				<group col="4" colspan="4">
					<field name="spouse_name"/>
					<field name="spouse_employer"/>
					<field name="spouse_phone"/>
				</group>
             </xpath>
      	
       <xpath expr="//page[@name='public']" position="inside">
	             <group col="4" colspan="4">
					<field name="title"/>
					<field name="employee"/>
					<field name="start_date"/>
					<field name="salary" widget="monetary"/>
				</group>
             </xpath>
      
           </field> 

    </record>    
	
	<!-- Leave Request -->
	<record id="ninas_edit_holiday_new" model="ir.ui.view">
        <field name="name">ninas.hr.holidays</field>
        <field name="model">hr.holidays</field>
        <field name="priority" eval="7"/>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="assigned_to"/>
            </field>
             <field name="name" position="before">
                <field name="title"/>
                <field name="agency"/>
                <field name="planned_leave"/>
            </field>
        </field>
    </record>
    
