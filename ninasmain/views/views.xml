    <menuitem name="Employee Training Tracker" id="ninas_training_tracker_menuitem" parent="hr.menu_hr_root" action="ninas_training_tracker_action"/>
              
   	<menuitem name="Receipt Register" id="register_receipt_menu" parent="stock.menu_stock_root"/>
    <menuitem name="Monthly Consumable Receipt" id="tests_request_menu" parent="register_receipt_menu"
              action="Test_action_window"/>
	
  </data>
