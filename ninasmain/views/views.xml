							<field name="fname"/>
							<field name="lname"/>
						</group>
						<group string="Address" col="4" colspan="4">
							<field name="address"/>
							<field name="unit"/>
							<field name="city"/>
							<field name="state_id"/>
							<field name="zip_code"/>
						</group>
						<group>
							<field name="telphone"/>
							<field name="phone_id"/>
						</group>
						<group>
							<field name="relationship"/>
						</group>
					</page>
				</xpath>
 				
			 <xpath expr="//page[@name='personal_information']" position="inside">
	             <group string="Fullname" col="4" colspan="4">
					<field name="name"/>
					<field name="lname"/>
				</group>
				<group col="4" colspan="4">
					<field name="city"/>
					<field name="state_id"/>
					<field name="zip_code"/>
				</group>
