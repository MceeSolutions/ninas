<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gateway_config_form_view" model="ir.ui.view">
            <field name="name">gateway.config.form</field>
            <field name="model">gateway.config</field>
            <field name="arch" type="xml">
                <form string="Gateway Config">
                    <sheet>
                        <group col="2" colspan="4">
                            <field name="name"/>
                            <field name="url" widget="url"/>
                            <field name="access_code"/>
                            <field name="username"/>
                            <field name="password" password="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>  

        <record id="gateway_config_tree_view" model="ir.ui.view">
            <field name="name">gateway.config.tree</field>
            <field name="model">gateway.config</field>
            <field name="arch" type="xml">
                <tree string="Gateway Config">
                    <field name="name"/>
                    <field name="url" widget="url"/>
                </tree>
            </field>
        </record>  
	
	
	    <record model="ir.actions.act_window" id="gateway_config_action">
            <field name="name">Gateway Config</field>
            <field name="res_model">gateway.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="ninas_bank_form_view" model="ir.ui.view">
            <field name="name">ninas.bank.form</field>
            <field name="model">ninas.bank</field>
            <field name="arch" type="xml">
                <form string="Bank">
                    <sheet>
                        <group col="2" colspan="4">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sort_code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>  

        <record id="ninas_bank_tree_view" model="ir.ui.view">
            <field name="name">ninas.bank.tree</field>
            <field name="model">ninas.bank</field>
            <field name="arch" type="xml">
                <tree string="Banks">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="sort_code"/>
                </tree>
            </field>
        </record>  
	
	
	    <record model="ir.actions.act_window" id="ninas_bank_action">
            <field name="name">Banks</field>
            <field name="res_model">ninas.bank</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="ninas_bank_transfer_form_view" model="ir.ui.view">
            <field name="name">ninas.bank.transfer.form</field>
            <field name="model">ninas.bank.transfer</field>
            <field name="arch" type="xml">
                <form string="Bank Transfer">
                    <header>
                        <button string="Transfer" name="transfer_funds" type="object" states="outgoing" class="oe_highlight"/>
                        <button name="mark_outgoing" string="Retry" type="object" states="exception,cancel"/>
                        <button name="check_status" string="Status" type="object" states="sent"/>
                        <button name="cancel" string="Cancel" type="object" states="outgoing"/>
                        <field name="state" widget="statusbar" statusbar_visible="outgoing,sent,received,exception,cancel"/>
                    </header>
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                            <field name="partner_id" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                            <field name="amount" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                            <field name="payment_date" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                            <field name="remarks" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                            <field name="vendor_code" readonly="1"/>
                            <field name="vendor_name" readonly="1"/>
                            <field name="partner_bank" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                            <field name="vendor_acctnumber" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                            <field name="vendor_bankcode" readonly="1" attrs="{'readonly':[('state','!=',['outgoing'])]}"/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <field name="log_ids" create="False" delete="False">
                                    <tree>
                                        <field name="status_code"/>
                                        <field name="code"/>
                                        <field name="message"/>
                                        <field name="create_date"/>
                                    </tree>
                                    <form>
                                        <group cols="2" readonly="1">
                                            <field name="status_code"/>
                                            <field name="code"/>
                                            <field name="message"/>
                                            <field name="response"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>  

        <record id="ninas_bank_transfer_tree_view" model="ir.ui.view">
            <field name="name">ninas.bank.transfer.tree</field>
            <field name="model">ninas.bank.transfer</field>
            <field name="arch" type="xml">
                <tree string="Bank Transfer">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="payment_date"/>
                    <field name="remarks"/>
                    <field name="vendor_code"/>
                    <field name="vendor_name"/>
                    <field name="partner_bank"/>
                </tree>
            </field>
        </record>  
	
	
	    <record model="ir.actions.act_window" id="ninas_single_transfer_action">
            <field name="name">Single Transfer</field>
            <field name="res_model">ninas.bank.transfer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="ninas_account_balance_form_view" model="ir.ui.view">
            <field name="name">ninas.account.balance.form</field>
            <field name="model">ninas.account.balance</field>
            <field name="arch" type="xml">
                <form string="Account Balance">
                    <header>
                        <button string="Retrieve Balance" name="get_balance" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name"/>
                            <field name="account_number"/>
                            <field name="code" readonly="1"/>
                            <field name="message" readonly="1"/>
                            <field name="count" readonly="1" attrs="{'invisible':[('account_number','!=',False)]}"/>
                            
                        </group>
                        <notebook>
                            <page string="Balances">
                                <field name="balance_line_ids" create="False" delete="False">
                                    <tree>
                                        <field name="name" attrs="{'invisible':[('parent.account_number','!=',False)]}"/>
                                        <field name="legder_balance"/>
                                        <field name="available_balance"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="hash"/>
                                    </tree>
                                    <form>
                                        <group cols="2" readonly="1">
                                            <field name="name" attrs="{'invisible':[('parent.account_number','!=',False)]}"/>
                                            <field name="legder_balance"/>
                                            <field name="available_balance"/>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="hash"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>  

        <record id="ninas_account_balance_tree_view" model="ir.ui.view">
            <field name="name">ninas.account.balance.tree</field>
            <field name="model">ninas.account.balance</field>
            <field name="arch" type="xml">
                <tree string="Account Balance">
                    <field name="name"/>
                    <field name="account_number"/>
                    <field name="code"/>
                    <field name="message"/>
                    <field name="count"/>
                </tree>
            </field>
        </record>  
	
	    <record model="ir.actions.act_window" id="ninas_account_balance_action">
            <field name="name">Account Balance</field>
            <field name="res_model">ninas.account.balance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="Banking" id="ninas_banking_main_menu" parent="account.menu_finance"/>
        <menuitem name="Single Transfer" id="single_transfer_menu" parent="ninas_banking_main_menu" action="ninas_single_transfer_action" sequence="1"/>
        <menuitem name="Bulk Transfer" id="bulk_transfer_menu" parent="ninas_banking_main_menu" action="ninas_single_transfer_action" sequence="1"/>
        <menuitem name="Account Balance" id="ninas_account_balance_menu" parent="ninas_banking_main_menu" action="ninas_account_balance_action" sequence="2"/>
        <menuitem name="Banks" id="ninas_bank_menu" parent="ninas_banking_main_menu" action="ninas_bank_action" sequence="9"/>
        <menuitem name="Payment Gateway" id="gateway_config_menu" parent="ninas_banking_main_menu" action="gateway_config_action" sequence="10"/>

    </data>
</odoo>