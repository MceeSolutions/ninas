                                </field>
                            </page>
                            <page string="Logs">
                                <field name="log_ids" options="{'no_create':True,'no_delete':True}" readonly="1">
                                    <tree readonly="1">
                                        <field name="status_code"/>
                                        <field name="code"/>
                                        <field name="message"/>
                                        <field name="create_date"/>
                                    </tree>
                                    <form readonly="1">
                                        <group cols="2" readonly="1">
                                            <field name="status_code"/>
                                            <field name="code"/>
                                            <field name="message"/>
                                            <field name="response"/>
