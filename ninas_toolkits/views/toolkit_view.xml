                                                        <field name="code"/>
                                                        <field name="name"/>
                                                    </tree>
                                                    <form>
                                                        <group>
                                                            <field name="code"/>
                                                            <field name="name" domain="[('id','in',parent.title_ids)]"/>
                                                        </group>
                                                        <notebook>
                                                            <page name="page_section" string="Subsections">
                                                                <field name="subsection_ids">
                                                                    <tree>
                                                                        <field name="code"/>
                                                                        <field name="name"/>
                                                                    </tree>
                                                                    <form>
                                                                        <group>
                                                                            <field name="code"/>
                                                                            <field name="name"/>
                                                                        </group>
                                                                    </form>
                                                                </field>
                                                            </page>
                                                        </notebook>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </group>
                        </page>
                         <page name="page_comments" string="Comments">
                            <field name="comments" widget="html"/>
                        </page>
                        <page name="page_recommendations" string="Recommendations">
