            </tree>
        </field>
    </record>  
    
    
    <record model="ir.actions.act_window" id="ninas_surveillance_report_action">
        <field name="name">Surveillance Report</field>
        <field name="res_model">ninas.surveillance.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
