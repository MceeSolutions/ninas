  	<record id="ninas_assessment_client_form_view" model="ir.ui.view">
        <field name="name">ninas.assessment.client.feedback.form</field>
        <field name="model">ninas.assessment.client.feedback</field>
        <field name="arch" type="xml">
            <form string="Assessment Client Feedback">
                <header>
                    <button name="approve" string="Approve" type="object" class="btn btn-primary" states="new,refused"/>
                    <button name="draft" string="Set to New" type="object" states="refused,approved"/>
                    <button name="refuse" string="Refuse" type="object" class="btn btn-danger" states="new"/>
                    <field name="state" widget="statusbar"/>
                </header>
           	    <sheet>
                    <group col="4" colspan="4">
                        <field name="name"/>
                        <field name="application_id"/>
                        <field name="institution_name" readonly="1"/>
                        <field name="institution_representative" readonly="1"/>
                        <field name="assessment_team_ids" widget="many2many_tags" readonly="1"/>
                        <field name="lead_assessor_id" readonly="1"/>
                        <field name="assessment_date"/>
                    </group>
                    <notebook>
                        <page name="page_comments" string="Detailed Comments">
                            <group string="Detailed comments, observations and/or reference to assessors or assessment process">
                                <field name="comments" nolabel="1" widget="html"/> 
                            </group>
                        </page>
                        <page name="page_action_completed" string="Actions Completed">
                            <group string="Actions Completed:">
                                <field name="action_completed" nolabel="1" widget="html"/> 
                            </group>
                        </page>
                        <page name="page_feedback" string="Feedback">
                            <group string="Feedback provided: (Please complete when and to whom feedback was given)">
                                <field name="feedback" nolabel="1" widget="html"/> 
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>  

